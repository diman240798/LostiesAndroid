<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ubuntu_r"
        android:text="@string/feed"

        android:textColor="@color/colorBlueText"
        android:textSize="@dimen/space25"
        android:layout_marginTop="@dimen/space25"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivOpenFilters"
        android:layout_width="@dimen/space60"
        android:layout_height="@dimen/space60"
        android:src="@android:drawable/ic_menu_zoom"


        android:textColor="@color/colorBlueText"
        android:textSize="@dimen/space25"
        android:layout_marginEnd="@dimen/space16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvTitle"
        app:layout_constraintBottom_toBottomOf="@id/tvTitle"
        />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vpFeed"
        android:layout_width="@dimen/space0"
        android:layout_height="@dimen/space0"
        android:layout_marginTop="@dimen/space16"
        app:layout_constraintTop_toBottomOf="@id/ivOpenFilters"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>